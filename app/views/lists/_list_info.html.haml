.listDetailContainer
  .listName= list.name
  .listDetails
    .listDate= list.created_at.to_date
    .listItemCount
      ="#{list.items.count} item(s)"
    .listActions
      =form_tag clone_list_path(list), :class => "listCloneForm" do
        = submit_tag '', {:class => "cloneButton", :id => "clone_list_#{list.id}"}
      = link_to image_tag('view.png', :alt => t('show'), :title => t('show')), list
      = link_to image_tag('edit.png', :alt => t('edit'), :title => t('edit')), edit_list_path(list)
      = link_to image_tag('delete.png', :alt => t('destroy'), :title => t('destroy')), list, :confirm => t('are_you_sure'), :method => :delete, :id => "remove_list_#{list.id}"

