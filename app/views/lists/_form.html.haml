#listEditForm
  = form_for(@list, :html => {:class => "vBox"}) do |f|
    = render :partial => 'lists/errors'
    
    .field
      = f.label :name, :class => "title"
      %br
      .actions
        = f.text_field :name, :id => :name
        = f.submit t('application.actions.save')
.hBox
  - unless @list.new_record?
    = render :partial => 'lists/items'
    = render :partial => 'lists/available_articles'
          
%hr
#newArticle
  %h3= t('articles.new.title')
  = form_for(@article, :remote => true) do |af|
    .field
      = af.label :name
      %br
      = af.text_field :name
      = hidden_field_tag :list_id, @list.id
      = af.submit 
